<article class="py-8">

    {% for block in section.blocks %} 
        {% case block.type %}
            {% when "article_title"%}
                <div class="flex items-center justify-center">
                    <div class="max-w-7xl text-center">
                        <a 
                        href="{{ blog.url }}" 
                        class="text-base uppercase text-gray-500 hover:text-gray-900">
                            {{ blog.title }}
                        </a>
                        <h1 class="text-4xl md:text-6xl font-medium">
                            {{ article.title }}
                        </h1>
                    </div>
                </div>
                <h1>
                </h1>
            {% when "article_author"%}
                <div class="flex items-center justify-center">
                    <div class="max-w-7xl text-center">
                        {%  if section.settings.enable_author %}
                            <small>{{ article.author }}</small>
                        {% endif %}
                    </div>
                </div>
            {% when "article_published_date"%}
                <div class="flex items-center justify-center">
                    <div class="max-w-7xl text-center">
                        {% if section.settings.enable_published_date %}
                            <time datetime="{{ article.published_at | date: '%d-%m-%Y' }}">
                                {{ article.published_at | date: format: "on_date" }}
                            </time>
                        {% endif %}
                    </div>
                </div>
            {% when "feature_images"%}
                <div class="max-w-7xl bg-glue-100 rounded-lg mx-2 md:mx-auto overflow-hidden my-4">
                    {% if  article.image != blank%} 
                        <img 
                            class="w-full h-80 object-cover object-center"
                            src="{{ article |  image_url: width: 400}}"
                            alt="{{ article.image.alt }}"> 
                    {% else %}
                        {% assign placeholder_image = "liflestyle-2" %}
                        {{ placeholder_image |  placeholder_svg_tag: "w-full h-80 object-cover object-center p-5" }}
                    {% endif %}
                </div>
            {% when "article_content"%}
                <div class="flex items-center justify-center">
                    <article class="max-w-4xl">
                        {{ article.content }}
                    </article>
                </div>
        {%endcase%}
    {% endfor %}

</article>

{% if blog.comments_enabled? %}
    <div id="comments" class="my-8">
        {% if article.comments_count > 0 %}
            <div class="flex-1 items-center justify-center mx-auto max-w-4xl px-4">
                {% if form.error %}
                    <div class="border p-5">
                        <div class="flex flex-row items-center w-full my-3">
                            <div class="text-red-900">
                                {% render "icon-failed"%}
                            </div>
                            <div class="text-sm font-medium ml-3">
                                Your comment was not posted.
                            </div>
                        </div>
                    </div>
                    <ul class="px-3 mb-3 ml 7 list-decimal">
                        {% for error in form.errors %}
                            <li>
                                <span>
                                    {{ form.errors.message[error] }}
                                </span>
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    {% if form.posted_successfully? %}
                        <div class="flex flex-row item-center w-full my-3 p-5">
                            <div class="text-green-900">
                                {% render "icon-success" %}
                            </div>
                            <div class="text-sm font-medium-ml-3">
                                The comment is posted successfully.
                            </div>
                        </div>
                    {% endif %}

                {% endif %}
                <h1 class="text-lg mb-4 font-medium">
                    What people are saying.
                </h1>
                {% paginate article.comments by 5 %}
                    {% for comment in article.comments %}
                        <div class="flex-1 border my-4 px-4 py-2 sm:px-6 sm:py-4 leading relaxed">
                            <span class="comment-author">
                                {{ comment.author }}
                            </span>
                            <span class="text-xs text-gray-400">
                                {{ comment.created_at |  date: format: "on_date" }}
                            </span>
                            <p class="text-sm">
                                {{ comment.content }}
                            </p>
                        </div>
                    {% endfor %}
                {% if paginate.pages > 1 %}
                    {{ paginate |  default_pagination }}
                {% endif %}
                {% endpaginate %}
            </div>
        {% else %}
            <div class="flex items-center justify-center">
                <article class="max-w-4xl">
                    There are no comments.
                </article>
            </div>
        {% endif %}
    </div>
    <div id="comment_form" class="mb-8">
        {% form 'new_comment', article %}
            <div class="flex-1 mx-auto intems-center justify-center max-w-4xl px-4">
                <div class="px-1 md:flex mb-3">
                    <div class="px-3 md:w-1/2">
                        <label
                            for="comment_author" 
                            class="text-gray-700 font-medium uppercase font-xs mb-2">
                            Name
                        </label>
                        <input
                            type="text"
                            id="comment_author"
                            placeholder="Name"
                            class="w-full text-gray-700 border py-3 px-4 mb-3 focus:outline-none"
                            name="comment[author]"
                            required>
                    </div> 
                    <div class="px-3 md:w-1/2">
                        <label
                            for="comment_email"
                            class="text-gray-700 font-medium uppercase font-xs mb-2">
                            Email
                        </label>
                        <input
                            type="email"
                            id="comment_email"
                            placeholder="example@mail.com"
                            class="w-full text-gray-700 border py-3 px-4 mb-3 focus:outline-none"
                            name="comment[email]">
                    </div>                    
                </div>
                <div class="px-1 md:flex mb-3">
                    <div class="px-3 md:w-full">
                        <label
                            class="text-gray-700 font-medium uppercase font-xs mb-2" 
                            for="comment">
                            Comment
                        </label>
                        <textarea 
                            class="w-full resize-none text-gray-700 border py-3 px-4 mb-3 focus:outline-none"
                            name="comment[body]" 
                            id="comment" 
                            required>
                        </textarea>
                      </div>                    
                </div>
                <div class="px-1 md:flex mb-3">
                    <div class="px-3 md:w-full">
                        <input 
                        class="w-full cursor-pointer px-4 py-2 border text-base font-medium text-white bg-gray-900 hover:bg-gray-500"
                        type="submit"
                        value="Post comment">
                    </div>
                </div>                
            </div>          
        {% endform %}
    </div>
{% endif %}



{% schema %}
    {
        "name": "Template Article",
        "settings": [
            {
                "type": "checkbox",
                "id": "enable_author",
                "default": true,
                "label": "Display Author Name"
            },
            {
                "type": "checkbox",
                "id": "enable_published_date",
                "default": true,
                "label": "Display Published Date"
            }
        ],
        "blocks": [
            {
                "type": "article_title",
                "name": "Title",
                "limit": 1
            },
            {
                "type": "article_author",
                "name": "Author",
                "limit": 1
            },
            {
                "type": "article_published_date",
                "name": "Published Name",
                "limit": 1
            },
            {
                "type": "feature_images",
                "name": "Thumbnail",
                "limit": 1
            },
            {
                "type": "article_content",
                "name": "Content",
                "limit": 1
            }
        ]
    } 
{% endschema %}

