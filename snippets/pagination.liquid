{% if paginate.pages > 0 %}
    <nav role="navigation" class="flex-display justify-center my-8">
    {% if paginate.previous.is_link %}
        <a 
        href="{{ paginate.previous.url }}"
        class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-8 py-3 mx-1 rounded-sm font-medium"
        >
            {{ paginate.previous.title }}
        </a>
    {% endif %}
    {% for part in paginate.parts %}
        {% if part.title != paginate.current_page %}
            <a href="{{ part.url }}"
            class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-8 py-3 mx-1 rounded-sm font-medium"
            >
                {{ part.title }}
            </a>
        {% else %}
            <span href="{{ part.url }}"
            class="border border-gray-600 text-gray-600 px-8 py-3 mx-1 rounded-sm font-medium"
            >
                {{ part.title }}
            </span>
        {% endif %}
    {% endfor %}
    {% if paginate.next.is_link %}
        <a href="{{ paginate.next.url }}"
        class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-8 py-3 mx-1 rounded-sm font-medium"
        >
            {{ paginate.next.title }}
        </a>     
    {% endif %}
    </nav>
{% endif %}