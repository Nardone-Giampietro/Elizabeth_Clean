<div class="relative m-3 bg-white shadow-md rounded-lg max-w-sm">
    <a href="{{ product.url }}">
        <img 
            class="rounded-t-lg p-8"
            src="{{ product.featured_image |  image_url: width: 300 }}" 
            alt="{{ product.feature_image.alt }}">
    </a>
        <div class="px-5 pb-5">
            <a href="{{ product.url }}">
                <h3 class="text-gray-900 font-semibold text-xl tracking-tight">
                    {{ product.title }}
                </h3>
            </a>
            <div class="flex items-center justify-between">
                <span class="text-3xl font-bold text-gray-900">
                    {{ product.price |  money }}
                </span>
                {% unless product.available %}
                    <span 
                        class="text-white bg-red-700  focus:ring-4 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
                        Sold Out
                    </span>
                {% endunless %}
            </div>
        </div>
</div>